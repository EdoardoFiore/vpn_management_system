[Unit]
Description=VPN Management API Service
After=network.target iptables-openvpn.service

[Service]
User=root
Group=root

# Il percorso all'eseguibile di uvicorn nell'ambiente virtuale
ExecStart=/opt/vpn-manager-env/bin/uvicorn main:app --host 0.0.0.0 --port 8000

WorkingDirectory=/opt/vpn-manager/backend

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
